<div class = "edit_format">
<h1><b>Editing Book<b></h1>
</div>

      <% if @book.errors.any? %>
      <div class = "edit_error_box">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li class = "edit_errors-msg"><%= message %></li>
      <% end %>
        </ul>
      </div>
    <% end %>

<%= form_for (@book) do |f| %>

  <h4>Title</h4>
<%= f.text_field :title %>

  <h4>Body</h4>
<%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %>
  </p>

<% end %>

<div class = "edit-item">

<p class = "edit-item-show"><%= link_to "Show", book_path(@book.id) %>
</p>

<p class = "edit-item-back"><%= link_to "Back", books_path %>
</p>
</div>


