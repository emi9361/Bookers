
 <body>
  <div class = "index-page">

	<h1><b>Books</b></h1>
 </div>
	<table>
	  <thead>
		<tr>
		  <th><b>Title</b></th>
		  <th><b>Body</b></th>
		</tr>
	  </thead>

	  <%@books.each do |book|%>
	  <tbody>
	 	<tr>
		  <td><%= book.title %></td>
		  <td><%= book.body %></td>
 		  <td><%=link_to "Show", book_path(book.id)%></td>
 		  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
		  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
		</tbody>
	  <% end %>
	</table>
  </div>

  <main class ="new_format">
	<h1><b>New Book</b></h1>

	<!--form_for-->
	<%= form_for (@book) do |f| %>

	  <h4>Title</h4>
	<%= f.text_field :title %>

	  <h4>Body</h4>
	  <%= f.text_area :body %>

	  <p class = "update">
		<%= f.submit 'Update Book' %>
		</p>

	<% end %>

  </main>
</body>

