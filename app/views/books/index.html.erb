
 <body>
  <div class = "index-page">

	<h1><b>Books</b></h1>
	<table>
	  <thead>
		<tr>
		  <th><b>Title</b></th>
		  <th><b>Body</b></th>
		</tr>
	  </thead>

	  <%@books.each do |book|%>
	  <tbody>
	 	<tr>
		  <td><%= book.title %></td>
		  <td><%= book.body %></td>
 		  <td class = "index-show"><%=link_to "Show", book_path(book.id)%></td>
 		  <td class = "index-edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
		  <td class = "index-destroy"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
		</tbody>
	  <% end %>
	</table>
  </div>

  <main class ="new_format">
	<h1><b>New Book</b></h1>

      <% if @book.errors.any? %>
      <div class ="index_error_box">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li class = "index_errors-msg"><%= message %></li>
           <% end %>
          </ul>
      </div>
      <% end %>
	<!--form_for-->
	  <%= form_for (@book) do |f| %>

	    <h4 class="format-item">Title</h4>
	    <%= f.text_field :title %>

	    <h4 class ="format-item">Body</h4>
	    <%= f.text_area :body %>

        <p class = "format-item"><%= f.submit 'Create Book' %>
		</p>
	  <% end %>
  </main>
</body>

